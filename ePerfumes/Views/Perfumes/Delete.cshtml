@model Perfume
@{
    ViewData["Title"] = "Apagar Perfume";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <hi>Confirmação de Delete de @Model.Perfume_Name</hi>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                    <img class="rounded" style="max-width: 160px" id="Perfume_Pic_URL" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Perfume_Pic_URL" class="control-label"></label>
                        <input asp-for="Perfume_Pic_URL" class="form-control" readonly />
                        <span asp-validation-for="Perfume_Pic_URL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Perfume_Name" class="control-label"></label>
                        <input asp-for="Perfume_Name" class="form-control" readonly/>
                        <span asp-validation-for="Perfume_Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Perfume_ID" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        </form>
                        <a class="btn btnbtn-outline-secondary" asp-action="Index">Show all</a>
                    </div>         
            </div>
        </div>
    </div>
</div>

