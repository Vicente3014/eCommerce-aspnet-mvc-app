@model IEnumerable<Marca>


@{
    ViewData["Title"] = "Índice de marcas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Marca_Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Marca_Pic_URL)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded" src="@item.Marca_Pic_URL" alt="@item.Marca_Name" style="max-width: 160px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Marca_Name)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>|
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
